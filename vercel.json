{
    "version": 2,
    "builds": [
        {
            "src": "app/main.py",
            "use": "@vercel/python"
        },
        {
            "src": "app/static/**",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/",
            "dest": "app/static/index.html"
        },
        {
            "src": "/analyze",
            "dest": "app/static/analyze.html"
        },
        {
            "src": "/docs",
            "dest": "app/static/docs.html"
        },
        {
            "src": "/keys",
            "dest": "app/static/keys.html"
        },
        {
            "src": "/version",
            "dest": "app/static/version.html"
        },
        {
            "src": "/limits",
            "dest": "app/static/limits.html"
        },
        {
            "src": "/static/(.*)",
            "dest": "app/static/$1"
        },
        {
            "src": "/api/v1/(.*)",
            "dest": "app/main.py",
            "status": 301,
            "headers": {
                "Location": "/api/v2/$1"
            }
        },
        {
            "src": "/api/(.*)",
            "dest": "app/main.py"
        }
    ],
    "env": {
        "PYTHON_VERSION": "3.9",
        "REDIS_URL": "${REDIS_URL}",
        "API_KEY_REQUIRED": "true",
        "RATE_LIMIT": "100",
        "PRO_RATE_LIMIT": "1000",
        "RATE_WINDOW": "3600"
    }
} 